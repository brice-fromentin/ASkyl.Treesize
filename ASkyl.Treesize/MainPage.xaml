<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ASkyl.Treesize.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <ActivityIndicator x:Name="Activity" Color="{StaticResource Primary}"  IsRunning="false" />

            <Label
                x:Name="FolderNameLbl"
                Text="Click to select folder ..."
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="WorkingFolderLbl"
                Text="Waiting ..."
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="SelectFolderBtn"
                Text="Folder"
                Clicked="OnFolderClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
